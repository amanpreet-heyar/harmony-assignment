{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Node",
    "jsx": "react-jsx",
    "baseUrl": "./",
    "strict": true, // ✅ Enables all strict type checks
    "forceConsistentCasingInFileNames": true, // ✅ Ensures consistent imports
    "skipLibCheck": true, // ✅ Prevents type issues from node_modules
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true
  },
  "include": ["src"]
}
